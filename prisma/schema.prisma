// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model work_list {
    id              Int     @id @unique
    title           String
    type            String
    artist_id       Int
    artist_footnote String?
    thumbnail       String
}

model artists {
    id       Int      @id @unique
    name     String
    grade    Int
    awards   String[]
    sns_list Json
}

model work_info {
    id          Int      @id @unique
    type_detail String
    images      String[]
    yt_url      String
    desc        String
}
